@model AppointmentsViewModel

<div class="text-center">
    <h3>View your appointment</h3>
</div>

<!--This page displays all of the appointments currently in the database-->

<table class="table table-bordered table-dark">
    <thead>
        <tr>
            <th>Time</th>
            <th>Name</th>
            <th>Size</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    @foreach (var x in Model.groups) {
        
        <tbody>
            <tr>


                <td>@x.TimeChosen</td>
                <td>@x.Name</td>
                <td>@x.Size</td>
                <td>@x.Email</td>
                <td>@x.PhoneNumber</td>

            </tr>
        </tbody> 
        
      }
        

</table>









